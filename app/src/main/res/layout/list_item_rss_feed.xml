<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_view"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toTopOf="@+id/published_on_label_view"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/old_time_rag_no_text"/>

        <TextView
            android:id="@+id/headline_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginStart="11dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Merriweather.Bold"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/trail_text_view"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/thumbnail_view"
            tools:text="Headline for the article"/>

        <TextView
            android:id="@+id/trail_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toTopOf="@+id/section_label_view"
            card_view:layout_constraintEnd_toStartOf="@+id/section_view"
            card_view:layout_constraintStart_toStartOf="@+id/section_view"
            card_view:layout_constraintTop_toBottomOf="@+id/headline_view"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae."/>


        <TextView
            android:id="@+id/published_on_label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="94dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="94dp"
            android:layout_marginStart="21dp"
            android:text="@string/published_on_label"
            android:textAppearance="@style/Merriweather.Bold"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/published_on_view"
            card_view:layout_constraintEnd_toStartOf="@+id/section_label_view"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/thumbnail_view"/>

        <TextView
            android:id="@+id/published_on_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="104dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="104dp"
            android:layout_marginStart="21dp"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/section_view"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/published_on_label_view"
            tools:text="31-12-1999"/>


        <TextView
            android:id="@+id/section_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="@string/section_label"
            android:textAppearance="@style/Merriweather.Bold"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/section_view"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/published_on_label_view"
            card_view:layout_constraintTop_toBottomOf="@+id/trail_text_view"/>

        <TextView
            android:id="@+id/section_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/published_on_view"
            card_view:layout_constraintTop_toBottomOf="@+id/section_label_view"
            tools:text="Really long section description so that we can test long line wrapping."/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>