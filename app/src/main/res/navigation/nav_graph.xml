<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allFeedFragment">

    <fragment
        android:id="@+id/allFeedFragment"
        android:name="uk.co.mezpahlan.oldtimerag.theguardian.feed.AllFeedFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_theguardian_feed">
        <action
            android:id="@+id/next_action"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/articleFeedFragment"
        android:name="uk.co.mezpahlan.oldtimerag.theguardian.feed.ArticleFeedFragment"
        android:label="@string/text_articles"
        tools:layout="@layout/fragment_theguardian_feed">
        <action
            android:id="@+id/next_action"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/blogFeedFragment"
        android:name="uk.co.mezpahlan.oldtimerag.theguardian.feed.BlogFeedFragment"
        android:label="@string/text_blog"
        tools:layout="@layout/fragment_theguardian_feed">
        <action
            android:id="@+id/next_action"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="uk.co.mezpahlan.oldtimerag.theguardian.article.ArticleFragment"
        android:label="ArticleFragment"
        tools:layout="@layout/fragment_theguardian_article" />

</navigation>