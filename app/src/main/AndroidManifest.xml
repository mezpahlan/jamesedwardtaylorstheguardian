<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uk.co.mezpahlan.oldtimerag">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="uk.co.mezpahlan.oldtimerag.theguardian.TheGuardianApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name="uk.co.mezpahlan.oldtimerag.theguardian.feed.FeedActivity"
            android:theme="@style/AppTheme.BrandedLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="uk.co.mezpahlan.oldtimerag.theguardian.article.ArticleActivity" />

    </application>

</manifest>
